<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <style name="AppTheme" parent="android:Theme.Light" >
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    	<item name="android:windowNoTitle">true</item>
    </style>
	<style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/no_ainm</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_ainm</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    
	<style name="title">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	<style name="btn_post_list_item">
        <item name="android:textColor">#5b5a5a</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_marginLeft">@dimen/new_list_item_pad14</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:layout_width">@dimen/new_post_btn_w</item>
        <item name="android:layout_height">@dimen/new_post_btn_h</item>
    </style>
	<style name="pub_fun_zone_btn_style">
	    <item name="android:textColor">#2d2d2d</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:background">@drawable/pub_btn_selector</item>
	</style>
	<style name="menu_di0.loag_anim" parent="android:Animation">
	    <item name="android:windowEnterAnimation">@anim/menu_diloag_in</item>
	    <item name="android:windowExitAnimation">@anim/menu_diloag_out</item>
	</style>
	<style name="pub_dialog_list_item_text_style">
	    <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.7dip</item>
	    <item name="android:textColor">#5b5a5a</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:paddingLeft">@dimen/pad_30</item>
	    <item name="android:textSize">@dimen/text_size_24</item>
	</style>
	<style name="main_menu" parent="android:Animation">
	    <item name="android:windowEnterAnimation">@anim/main_menu_in</item>
	    <item name="android:windowExitAnimation">@anim/main_menu_out</item>
	</style>
	
	<style name="Theme.PageIndicatorDefaults" parent="android:Theme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    
    <style name="Widget">
    </style>
    
    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/new_type_item_bg_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/new_type_text_color_selector</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="mine_title">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
    
    <style name="mine_word">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#1C1C1C</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
      <style name="mine_info">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#1C1C1C</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
      <style name="mine_description">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#1C1C1C</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
    <style name="mine_login_other">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#565656</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
     <style name="mine_list_title">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#6c6c6c</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
     <style name="mine_list_content">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#898888</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
      <style name="mine_list_small">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#9c9c9c</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
    
    <style name="main_tab_bottom">
		<item name="android:textSize">@dimen/bottom_tab_font_size</item>
	    <item name="android:textColor">#2d2d2d</item>
	    <item name="android:ellipsize">marquee</item>
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:background">@drawable/bottom_btn</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:button">@null</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:layout_weight">1.0</item>
	</style>
	
    <style name="loaddialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>
    
    <style name="pub_news_bottom_btn">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="pub_news_add_btn">
        <item name="android:layout_marginLeft">26dip</item>
        <item name="android:layout_marginRight">26dip</item>
        <item name="android:background">@drawable/btn_yellow_selector</item>
        <item name="android:layout_height">57dip</item>
    </style>
	<style name="pub_news_edit">
        <item name="android:layout_marginLeft">9dip</item>
        <item name="android:layout_marginRight">9dip</item>
        <item name="android:background">@drawable/pub_news_edit_bg</item>
        <item name="android:paddingTop">14dip</item>
        <item name="android:paddingBottom">14dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
    </style>
    <style name="modif_pwd_text">
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="word">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
	</style>
	
    
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
   		<item name="android:button">@drawable/check_box_selector</item>
  		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#3e3e3e</item>
		<item name="android:fromAlpha">0.0</item>
		<item name="android:toAlpha">0.0</item>
   </style>
</resources>