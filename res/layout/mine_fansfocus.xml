<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
         >
        
    <include  
         layout="@layout/title_bar_back" 
         />
    <RelativeLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        >
	    <RadioGroup 
	        android:orientation="horizontal"
	        android:id="@+id/mine_fans_focus_rg"
	        android:layout_width="fill_parent"
	        android:layout_height="44dp"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/image_bjtitebottom"
    		android:gravity="center_horizontal"
	        >
	        	<RadioButton
						android:text="粉丝"
						android:id="@+id/mine_fans_rb"
						android:layout_marginTop="0.0dip"
		    			android:textSize="16sp"
		    			android:clickable="true"
		    			style="@style/main_tab_bottom"
		    			android:gravity="center"
					/>
	       
	        	<RadioButton
						android:text="关注"
						android:id="@+id/mine_focus_rb"
						android:layout_marginTop="0.0dip"
		    			android:textSize="16sp"
		    			android:clickable="true"
		    			style="@style/main_tab_bottom"
		    			android:gravity="center"
					/>
	        	<RadioButton
						android:text="推荐"
						android:id="@+id/mine_recommend_rb"
						android:layout_marginTop="0.0dip"
		    			android:textSize="16sp"
		    			android:clickable="true"
		    			style="@style/main_tab_bottom"
		    			android:gravity="center"
					/>

	    </RadioGroup>
    	  <ImageView
				android:id="@+id/img_select"
				android:layout_width="200dp"
				android:layout_height="1dp"
				android:background="#33b5e5"
				android:layout_alignBottom="@+id/mine_fans_focus_rg"
				android:layout_marginBottom="1dp"
			/>
    </RelativeLayout>
    
    
        <android.support.v4.view.ViewPager
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/mine_fansfocus_viewPager"
	       />
	
    </LinearLayout>