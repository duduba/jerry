<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/news_title_content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_16"
        android:textSize="@dimen/text_size_26" 
        android:layout_marginLeft="@dimen/new_list_item_pad14"
        android:textColor="#1e1e1e"
        android:singleLine="true"
        android:text="圣达菲"
        android:ellipsize="end"/>
	<LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/new_list_item_pad14"
        android:paddingBottom="6dip"
        android:layout_marginTop="8dip">
		<com.zxtd.information.ui.custview.RoundAngleImageView
                android:id="@+id/mine_self_header"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:scaleType="fitXY"
                android:background="@drawable/header_icon_default" />
        <TextView
            android:layout_marginLeft="4dip"
            android:id="@+id/news_nickname_content_id"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textColor="#898888"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/news_date_content_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textColor="#898888"
            android:lines="1"
            android:text="13-02-20"
            android:layout_marginRight="@dimen/pad_20"
            android:layout_marginLeft="@dimen/pad_10"/>

        <TextView
            android:id="@+id/news_postcounts_content_id"
            android:layout_width="@dimen/new_net_friend_item_data_w"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textColor="#898888"
            android:text="1234234"
            android:gravity="right"/>
        <ImageView 
		    android:layout_width="@dimen/new_net_friend_item_post_w"
		    android:layout_height="@dimen/new_net_friend_item_post_h"
		     android:layout_marginRight="@dimen/new_list_item_pad14"
		     android:layout_marginLeft="@dimen/new_list_item_pad5"
		    android:src="@drawable/post_count_icon"/>
	</LinearLayout>
</LinearLayout>