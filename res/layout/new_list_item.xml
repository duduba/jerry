<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/new_list_item_pad14"
    android:paddingRight="@dimen/new_list_item_pad14"
    android:paddingTop="@dimen/new_list_item_pad16" >

    <FrameLayout
        android:layout_width="@dimen/new_list_item_icom_width"
        android:layout_height="@dimen/new_list_item_icom_height"
        android:layout_marginTop="2dip" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/new_icon_bg"
            android:contentDescription="@string/image"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="2dip"
            android:paddingLeft="0.6dip"
            android:paddingRight="0.6dip"
            android:paddingTop="0.6dip"
            android:src="@drawable/loading_icon" />

        <ImageView
            android:id="@+id/new_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/image"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="2dip"
            android:paddingLeft="0.6dip"
            android:paddingRight="0.6dip"
            android:paddingTop="0.6dip"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_list_item_pad14"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/new_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#1c1c1c"
            android:singleLine="true"
            android:textSize="@dimen/new_list_item_title_text_size" />

        <TextView
            android:id="@+id/new_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="#898888"
            android:textSize="@dimen/new_list_item_info_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/is_net_friend"
                android:layout_width="@dimen/new_list_item_netfriend_icon_w"
                android:layout_height="@dimen/new_list_item_netfriend_icon_h"
                android:src="@drawable/net_friend_icon"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/new_reply_count"
                android:layout_width="@dimen/new_list_item_reply_w"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:textColor="#898888"
                android:textSize="@dimen/new_list_item_reply_text_size" />

            <ImageView
                android:layout_width="@dimen/new_list_item_reply_icon_w"
                android:layout_height="@dimen/new_list_item_reply_icon_h"
                android:layout_marginLeft="@dimen/new_list_item_pad5"
                android:src="@drawable/post_count_icon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>